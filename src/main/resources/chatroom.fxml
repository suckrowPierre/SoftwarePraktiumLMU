<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" stylesheets="style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="communication.client.chatgui.ChatController">
    <children>
        <Label text="Chatroom">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" />
         </padding>
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <ListView fx:id="list" maxHeight="180.0" />
        <TextField fx:id="input">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <Button fx:id="btn" contentDisplay="CENTER" onAction="#btnPress" text="Send">
         <VBox.margin>
            <Insets />
         </VBox.margin></Button>
    </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>

</VBox>
